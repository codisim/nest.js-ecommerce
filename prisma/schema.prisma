generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String  @id @default(ulid())
  email        String  @unique
  password     String
  firstName    String
  lastName     String?
  role         Role    @default(USER)
  refreshToken String?

  orders   Order[]
  carts    Cart[]
  payments Payment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@map("users")
}

enum Role {
  ADMIN
  USER
}

enum OrderStatus {
  PENDING
  PORCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
  REFUNDED
}
