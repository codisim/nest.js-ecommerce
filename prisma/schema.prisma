generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String  @id @default(ulid())
  email        String  @unique
  password     String
  firstName    String
  lastName     String?
  role         Role    @default(USER)
  refreshToken String?

  orders   Order[]
  carts    Cart[]
  payments Payment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@map("users")
}

model Product {
  id          String  @id @default(ulid())
  name        String
  description String?
  price       Decimal @db.Decimal(10, 2)
  stock       Int     @default(0)
  sku         String  @unique
  imageUrl    String?
  isActice    Boolean @default(true)

  orderItems OrderItem[]
  cartItems  CartItem[]

  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([sku, categoryId, isActice])
  @@map("products")
}

enum Role {
  ADMIN
  USER
}

enum OrderStatus {
  PENDING
  PORCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
  REFUNDED
}
